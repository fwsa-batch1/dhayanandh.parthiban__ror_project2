            }
            else if(adowner.style.display == "none")
            {
              adowner.style.display = "flex"
               order.style.display="none"
               clerk.style.display ="none"
                 ownerlist.style.display="none"
               user.style.display ="none"
                current_owner.style.display ="none"
                dashboard.style.display ="none"
            }
        }
        function showusers(){
          // alert("hu")
            if (user.style.display == "flex")
            {
              user.style.display ="none"
               order.style.display="none"
               adowner.style.display ="none"
                 ownerlist.style.display="none"
                  current_owner.style.display ="none"
                  clerk.style.display ="none"
                  dashboard.style.display ="none"
            }
            else if(user.style.display == "none")
            {
              user.style.display = "flex"
               order.style.display="none"
               adowner.style.display ="none"
                 ownerlist.style.display="none"
                  current_owner.style.display ="none"
                  clerk.style.display ="none"
                  dashboard.style.display ="none"
            }
        }
        function showorders(){
          if (order.style.display =="flex"){
            order.style.display="none"
            user.style.display = "none"
            adowner.style.display ="none"
              ownerlist.style.display="none"
               current_owner.style.display ="none"
               clerk.style.display ="none"
               dashboard.style.display ="none"
          }
          else if(order.style.display =="none"){
             order.style.display="flex"
             user.style.display = "none"
             adowner.style.display ="none"
               ownerlist.style.display="none"
                current_owner.style.display ="none"
                clerk.style.display ="none"
                dashboard.style.display ="none"
          }
        }
        function showowners(){
          if (ownerlist.style.display =="flex"){
            ownerlist.style.display="none"
            user.style.display = "none"
            adowner.style.display ="none"
             order.style.display="none"
              current_owner.style.display ="none"
