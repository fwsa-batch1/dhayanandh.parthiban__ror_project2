<main>
  <header class="site-navbar" role="banner" style="position: absolute;
    top: 0px;">
    <div class="container" style="max-width: 1274px;max-height: 150vh;margin-top:0px">
      <div class="row align-items-center" style="background:#f5f5f5;border: 1px solid #f5f5f5;text-align: center;">
        <div class="col-11 col-md-2" style="    z-index: 1;">
          <h1 class="mb-0 site-logo" style="font-size: 19px !important;">
            <a href="javascript:void(0)" class="text-white mb-0" id="owner-dashboard-logo">
              <%= link_to menu_categories_path,style:"color:black" do %>
                <i class="fas fa-utensils" style="position: relative;top: 3px;font-size: 21px; color:black;"></i>
