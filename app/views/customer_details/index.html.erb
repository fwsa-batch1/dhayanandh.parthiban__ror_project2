        var user = document.querySelector("#userlist")
        var order= document.querySelector("#orders")
        var adowner= document.querySelector("#addowner")
        var ownerlist= document.querySelector("#ownerdetails")
        var current_owner= document.querySelector("#current-owner")
        var clerk = document.querySelector("#addclerk")
        var dashboard = document.querySelector("#dashboard")
        function adddashboard(){
          // alert("hu")
            if (dashboard.style.display == "flex")
            {
              dashboard.style.display ="none"
              clerk.style.display ="none"
               order.style.display="none"
              ownerlist.style.display="none"
               user.style.display ="none"
               adowner.style.display ="none"
               current_owner.style.display = "none"
            }
            else if(dashboard.style.display == "none")
            {
              dashboard.style.display = "grid"
              clerk.style.display = "none"
               order.style.display="none"
                 ownerlist.style.display="none"
               user.style.display ="none"
               adowner.style.display ="none"
                 current_owner.style.display ="none"
            }
        }
