        <ul style="margin-top: 22px; height:0px;">
          <li class="sidelist" style="padding:0px;visibility:hidden"><i class="fas fa-tachometer-alt"></i>Logo</li>
          <li onclick="adddashboard()" class="sidelist"><i class="fas fa-tachometer-alt"></i>Dashboard</li>
          <li onclick="addcafeteriaclerk()" class="sidelist"><i class="fas fa-user-graduate"></i>Add Clerk</li>
          <li onclick="addowner()" class="sidelist"><i class="fas fa-user-plus"></i>Add Owner</li>
          <li onclick="showusers()" class="sidelist"><i class="fas fa-users"></i>Customer Details</li>
          <li onclick="showorders()" class="sidelist" ><i class="fas fa-shopping-bag" ></i>Orders</li>
          <li onclick="showowners()" class="sidelist" ><i class="fas fa-shopping-bag" ></i>Owner Details</li>
          <li class="sidelist" onclick="showme()"><i class="fas fa-user-cog"></i>Profile</li>
          <li class="sidelist" ><svg style="fill: #555;margin-right: 9px;
    position: relative;
    top: -3px;" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill:rgba(0, 0, 0, 1);transform:;-ms-filter:"><path d="M18,2H6C5.447,2,5,2.447,5,3v9l5-4v3h6v2h-6v3l-5-4v9c0,0.553,0.447,1,1,1h12c0.553,0,1-0.447,1-1V3 C19,2.447,18.553,2,18,2z"></path></svg> <%= link_to "Sign Out", destroy_session_path, method: "delete" %></li>
        </ul>
      </div>
      <%= render partial: "customer_list" %>
      <%= render partial: "dashboard"%>
      <%= render partial: "order_list" %>
      <%= render partial: "add_clerk" %>
      <%= render partial: "add_owner" %>
      <%= render partial: "ownerdetails" %>
      <%= render partial: "profile" %>
